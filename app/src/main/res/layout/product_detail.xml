<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="20dp"
    style="?android:attr/textAppearanceLarge"
    tools:context="com.rrsalescorp.rrsalescorporation.ui.fragments.ProductDetailFragment">

    <!--Vehicle Name Category-->
    <TextView
        android:id="@+id/vehicle_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vehicle"/>

    <TextView
        android:id="@+id/vehicle_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vehicle_lbl"
        android:textStyle="bold"
        android:text="Vehicle Name"/>

    <!--No. Of Wheels Category-->
    <TextView
        android:id="@+id/wheels_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:text="No. Of Wheels" />

    <TextView
        android:id="@+id/wheels_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/wheels_lbl"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        android:text="2 Wheeler"/>

    <!--Product Name-->
    <TextView
        android:id="@+id/product_name_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/vehicle_val"
        android:text="Product Name" />

    <TextView
        android:id="@+id/product_name_val"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/product_name_lbl"
        android:text="Product Name" />

    <!--Product Code-->
    <TextView
        android:id="@+id/product_code_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/product_name_val"
        android:text="Product Code" />

    <TextView
        android:id="@+id/product_code_val"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/product_code_lbl"
        android:text="Product Code" />

    <!--Cost Price-->
    <TextView
        android:id="@+id/cost_price_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/product_code_val"
        android:text="Cost Price" />

    <TextView
        android:id="@+id/cost_price_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cost_price_lbl"
        android:text="xxx" />

    <!--Sell Price-->
    <TextView
        android:id="@+id/sell_price_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/product_code_val"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Sell Price" />

    <TextView
        android:id="@+id/sell_price_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cost_price_lbl"
        app:layout_constraintRight_toRightOf="parent"
        android:text="yyy" />

    <!--Current Stock Qty-->
    <TextView
        android:id="@+id/stock_qty_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/cost_price_val"
        android:text="Current Stock Qty." />

    <TextView
        android:id="@+id/stock_qty_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/stock_qty_lbl"
        android:text="xxx" />

    <!--Min. Purchase Qty-->
    <TextView
        android:id="@+id/min_purchase_qty_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/cost_price_val"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Minimum Purchase Qty." />

    <TextView
        android:id="@+id/min_purchase_qty_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/min_purchase_qty_lbl"
        app:layout_constraintRight_toRightOf="parent"
        android:text="xxx" />

    <!--Net Package Weight-->
    <TextView
        android:id="@+id/net_weight_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/stock_qty_val"
        android:text="Net Package Weight" />

    <TextView
        android:id="@+id/net_weight_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/net_weight_lbl"
        android:text="xxx" />

    <!--Net Package Volume-->
    <TextView
        android:id="@+id/net_volume_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/stock_qty_val"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Net Package Volume" />

    <TextView
        android:id="@+id/net_volume_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/net_volume_lbl"
        app:layout_constraintRight_toRightOf="parent"
        android:text="xxx" />

    <!--Size-->
    <TextView
        android:id="@+id/size_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/net_weight_val"
        android:text="Size" />

    <TextView
        android:id="@+id/size_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/size_lbl"
        android:text="small" />

    <!--Model-->
    <TextView
        android:id="@+id/model_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@id/net_volume_val"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Model" />

    <TextView
        android:id="@+id/model_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/model_lbl"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Old Model/New Model" />

</android.support.constraint.ConstraintLayout>

